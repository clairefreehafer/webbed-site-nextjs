  "prettier": {
    "overrides": [
      {
        "files": [
          "./src/data/photography/collections.json",
          "./src/data/photography/locations.json",
          "./src/data/photography/technical.json"
        ],
        "options": {
          "plugins": [
            "prettier-plugin-sort-json"
